<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" style="-fx-padding: 20; -fx-background-color: #E0FFFF;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="tserkovnikov.com.cleanplanetapp.controller.UserFormController">

    <Label fx:id="formTitle" style="-fx-font-size: 20; -fx-font-weight: bold;" text="Добавление партнёра" />

    <GridPane hgap="10" vgap="10">
        <Label text="Логин:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Должность:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <ComboBox fx:id="typeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Номер доступа:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="accessField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Доступ по здоровью:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <ComboBox fx:id="healthField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Пароль:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#onSave" style="-fx-background-color: #00CED1;" text="Сохранить" textFill="WHITE" />
        <Button onAction="#onCancel" style="-fx-background-color: #00CED1;" text="Отмена" textFill="WHITE" />
    </HBox>
</VBox>
